const profilesInfo = profiles.map(({ network, url }) => {
  const icon = socialIcons[network];
  const firstLetter = network[0].toUpperCase();
  return {
    id: network,
    section: "Social",
    title: `Visiar ${network}`,
    url,
    icon,
    hotkey: `ctrl+${firstLetter}`,
  };
});
---

<footer class="no-print">
  <small
    >Puedes usar las teclas <kbd>Ctrl</kbd> + <kbd>u</kbd> para cargar tu archivo
    .JSON o las teclas <kbd>Ctrl</kbd> + <kbd>k</kbd> para abrir la ventana de comandos</small
  >
</footer>

<div class="no-print" id="imprimir">
  <a href="#" onclick="window.print()"><Impresora /></a>
</div>

<ninja-keys
  placeholder="Busca el comando que necesites"
  hideBreadcrumbs
  openHotkey="ctrl+k"
  data-info={JSON.stringify(profilesInfo)}
>
</ninja-keys>

<script>
  import "ninja-keys";

  const ninja = document.querySelector("ninja-keys");

  if (ninja !== null) {
    const info = ninja.getAttribute("data-info") ?? "[]";
    const parsedInfo = JSON.parse(info);
    const data = parsedInfo.map((item: any) => {
      return {
        ...item,
        handler: () => {
          window.open(item.url, "_blank");
        },
      };
    });
    ninja.data = [
      {
        id: "print",
        title: "Imprimir",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" style="margin-right: 10px" width="18" height="18" viewBox="0 0 24 24"><path fill="currentColor" d="M7 2a1 1 0 0 0-1 1v4H4a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2v2a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1v-2h2a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-2V3a1 1 0 0 0-1-1zm10 12H7a1 1 0 0 0-1 1v2H4V9h16v8h-2v-2a1 1 0 0 0-1-1m-1-7H8V4h8zM5 10v2h3v-2zm11 6v4H8v-4z"/></svg>`,
        hotkey: "ctrl+p",
        section: "Acciones",
        handler: () => {
          window.print();
        },
      },
      ...data,
    ];
  }
</script>

<style>
  footer {
    position: fixed;
    bottom: 0;
    width: 60%;
    text-align: center;
    font-size: 15px;
    border-top: 1px solid #ddd;
    border-inline: 1px solid #ddd;
    border-radius: 7px 7px 0 0;
    margin-inline: 20%;
    padding-block: 5px;
    background: #eeeeeecc;

    view-timeline-name: --revealing;
    view-timeline-axis: block;

    animation: linear 0.3ms fadeIn;
    animation-timeline: --revealing;
    animation-range: entry 100% cover 10%;
  }
  kbd {
    padding-top: 3px;
    padding-bottom: 4px;
    padding-inline: 5px;
    border-radius: 5px 5px 0 0;
    background: #ddd;
  }

  #imprimir {
    display: none;
    position: fixed;
    bottom: 0;
    margin: 10px;
    padding: 10px;
    background: #ddd;
    border-radius: 50%;
  }
  #imprimir a {
    width: 15px;
    height: 15px;
    color: #777;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @media screen and (max-width: 768px) {
    footer {
      display: none;
    }
    #imprimir {
      display: flex;
    }
  }
</style>
